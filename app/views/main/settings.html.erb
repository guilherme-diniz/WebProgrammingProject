<section id="settings">
  <h3>Configurações</h3>
  <%= form_for @user,  html: {class: "form-horizontal", multipart: true} do |f| %>
    <div class="col-sm-12">
        <div class="form-group">
          <div class="col-sm-12">
            <%= image_tag current_user.avatar.url(:thumb) %>
            <%= f.file_field :avatar, class: "form-control", accept:"image/jpg,image/jpeg,image/png,image/gif" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
              <%= label_tag :name, "Nome" %>
              <%= f.text_field :name, class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
              <%= label_tag :email, "Email" %>
              <%= f.text_field :email,  class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= link_to  edit_user_registration_path , class: 'link' do %>
              <button class="btn btn-sm btn-vita btn-vita-success" type="button">
                    Trocar Senha
               </button>
            <% end %>
            <%= button_tag(type: :submit, class: 'btn btn-sm btn-vita btn-vita-primary') do %>
                Salvar
            <% end %>
        </div>
    </div>
  <% end %>
</section>
