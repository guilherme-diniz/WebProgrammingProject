<section id="signup-page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", multipart: true}) do |f| %>
    <%= devise_error_messages! %>
    <div class="panel panel-login">
      <div class="panel-header">
        <h3 class="text-center" style="font-weight: 300">Create Account</h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">
            <strong>E-mail</strong>
          </label>

          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">
            <strong>Password </strong> <br />
              <% if @validatable %>
                <em>(<%= @minimum_password_length %> characteres min.)</em>
              <% end %>
          </label>

          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">
            <strong>Confirm password</strong>
          </label>

          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="col-sm-9 text-center">
          <%= f.submit "Sign up", class: "btn btn-vita btn-vita-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
