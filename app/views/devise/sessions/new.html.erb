<section id="login-page">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", multipart: true}) do |f| %>
    <div class="panel panel-login">
      <div class="panel-header">
        <h3 class="text-center" style="font-weight: 300">Fazer login</h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">
            <strong>E-mail</strong>
          </label>

          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">
            <strong>Senha</strong>
          </label>

          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="col-sm-10 text-center">
          <%= f.submit "Entrar", class: "btn btn-vita btn-vita-primary" %>
        </div>
        <div class="top10 col-sm-10 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
